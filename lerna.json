{
    "lerna": "3.1.1",
    "version": "1.3.3",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "yes": false,
            "message": "chore(release): publish",
            "contents": "dist",
            "allowBranch": ["master", "release/*"],
            "noCommitHooks": true,
            "conventionalCommits": true,
            "ignoreChanges": ["*.snap", "*.spec.ts", "*.md"]
        },
        "bootstrap": {
            "scope": ["@rednax-skyhook/*"]
        },
        "exec": {
            "scope": ["@rednax-skyhook/*"]
        },
        "clean": {
            "yes": true
        }
    },
    "npmClientArgs": ["--no-package-lock"]
}
